@model FootballTeams.ViewModels.ManagerViewModel
@{
    ViewData["Title"] = "AddManager";
}

<h2>Add Manager</h2>

<div class="row">
    <div class="col-md-3">
        <form asp-action="AddManager" method="post">
            <div class="form-group">
                <label asp-for="@Model.FirstName" class="control-label"></label>
                <input asp-for="@Model.FirstName" class="form-control" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.LastName" class="control-label"></label>
                <input asp-for="@Model.LastName" class="form-control" />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Age" class="control-label"></label>
                <input asp-for="@Model.Age" class="form-control" />
                <span asp-validation-for="@Model.Age" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.TrophiesWon" class="control-label"></label>
                <input asp-for="@Model.TrophiesWon" class="form-control" />
                <span asp-validation-for="@Model.TrophiesWon" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.TeamId" class="control-label"></label>
                <select asp-for="@Model.TeamId" asp-items="@Model.TeamsSelectList"></select>
                <span asp-validation-for="@Model.TeamId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Add Manager" class="btn btn-default" />
            </div>

            @Html.AntiForgeryToken()
        </form>
    </div>
</div>

@section Scripts
{
    @Html.Partial("_ValidationScriptsPartial")
}
